{
  "name": "typescript-lib-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript lib boilerplate",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rimraf dist",
    "ctix": "ctix build --config .configs/.ctirc",
    "ctix-rm": "ctix remove --config .configs/.ctirc --force-yes --remove-backup",
    "dev": "tsx src/cli.ts",
    "dts-gen": "dts-bundle-generator --project ./tsconfig.dts.json -o dist/types/index.d.ts --no-banner src/index.ts",
    "debug": "node --inspect-brk -r ts-node/register src/cli.ts",
    "prebuild": "pnpm run clean",
    "build": "tsc --incremental --noEmit --project tsconfig.json --tsBuildInfoFile .tsbuildinfo",
    "esbuild-cjs": "FORMAT=cjs node .configs/esbuild.mjs",
    "esbuild-esm": "FORMAT=esm node .configs/esbuild.mjs",
    "bundle-pack": "run-p esbuild-cjs esbuild-esm dts-gen",
    "bundle": "run-s clean ctix bundle-pack ctix-rm",
    "test": "vitest --run",
    "lint": "eslint --cache .",
    "lint-staged": "lint-staged",
    "pub": "pnpm publish --registry http://localhost:8901",
    "unpub": "pnpm unpublish typescript-cli-boilerplate@$npm_package_version --registry http://localhost:8901 --force",
    "pub:prod": "RELEASE_MODE=true pnpm publish",
    "dd": "deps-diff md -d prod -d dev --title-list-type '*' --deps-list-type '*' --content-list-type '*'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/typescript-cli-boilerplate.git"
  },
  "keywords": ["library", "package", "scaffolding", "boilerplate"],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "typings": "./dist/esm/index.d.mts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs",
      "typings": "./dist/esm/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/imjuni/typescript-cli-boilerplate/issues"
  },
  "homepage": "https://github.com/imjuni/typescript-cli-boilerplate#readme",
  "devDependencies": {
    "@babel/types": "^7.23.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitest/coverage-v8": "^0.34.6",
    "cross-env": "^7.0.3",
    "ctix": "^2.0.0",
    "deps-diff": "^1.0.2",
    "dts-bundle-generator": "^8.1.2",
    "esbuild": "0.19.5",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.5.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "read-pkg": "^5.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.2",
    "tsx": "^3.12.8",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "vitest-tsconfig-paths": "^3.4.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=production eslint --cache"
    ],
    "*.{js,jsx,ts,tsx},*.json,.{eslintrc.cjs,prettierrc}": [
      "cross-env NODE_ENV=production prettier --ignore-path .eslintignore --parser json --write"
    ]
  }
}
